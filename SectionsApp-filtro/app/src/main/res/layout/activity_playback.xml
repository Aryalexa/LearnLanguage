<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aryalexa.sectionsapp.PlaybackActivity"
    android:background="#f7dfdf">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btn_play"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jingle Bells"
        android:id="@+id/textView1"
        android:layout_alignTop="@id/btn_play"
        android:layout_toLeftOf="@+id/btn_play"
        android:layout_toStartOf="@+id/btn_play" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btn_play_btt"
        android:layout_below="@+id/btn_play"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JB Butterworth"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/btn_play_btt"
        android:layout_toLeftOf="@+id/btn_play_btt"
        android:layout_toStartOf="@+id/btn_play_btt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btn_play_fft"
        android:layout_below="@+id/btn_play_btt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JB FFT"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/btn_play_fft"
        android:layout_toLeftOf="@+id/btn_play_fft"
        android:layout_toStartOf="@+id/btn_play_fft" />









</RelativeLayout>
